(function() {
    let originalComment = $('#<%= dom_id(@comment) %>');
    originalComment.hide();
    originalComment.before('<%= j render "comments/edit_form", comment: @comment %>');
    $('#<%= dom_id(@comment) %>_edit_comment_form').slideDown();
})();


$(document).on('click', '.cancel-edit', function() {
    console.log('cancel');
    $('#<%= dom_id(@comment) %>').show();
    $('#<%= dom_id(@comment) %>_edit_comment_form').remove();
});