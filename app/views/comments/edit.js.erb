(function() {
    var originalComment = $('#<%= dom_id(@comment) %>');
    originalComment.hide();
    originalComment.before('<%= j render "comments/form", comment: @comment %>');
    var commentForm = $('#<%= dom_id(@comment.photo) %>_<%= dom_id(@comment) %>_form')
    commentForm.slideDown();
})();


$(document).on('click', '#cancel-edit', function() {
    var originalComment = $('#<%= dom_id(@comment) %>');
    originalComment.show();
    var commentForm = $('#<%= dom_id(@comment.photo) %>_<%= dom_id(@comment) %>_form');
    commentForm.remove();
});

